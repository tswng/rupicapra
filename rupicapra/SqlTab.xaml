<TabItem x:Class="chamois.SqlTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chamois"
             mc:Ignorable="d" 
             MaxHeight="100" MaxWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">asdf</TextBox>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" />
        <TabControl Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Name="resultGridTab" Header="Query results">
                <Grid>
                    <DataGrid Name="resultsGrid" />
                </Grid>
            </TabItem>
            <TabItem Name="resultMessagesTab" Header="Messages">
                <Grid>
                    <TextBox Name="resultMessages">here would be written text messages</TextBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</TabItem>
