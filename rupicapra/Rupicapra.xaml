<Window x:Class="chamois.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chamois"
        mc:Ignorable="d"
        Title="Rupicapra" Height="450" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center">

        <DockPanel Name="dockPanel" >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Add tab (test)" Click="MenuItem_Click_1" />
                    <MenuItem Header="_Connection Manager" Click="MenuItem_Click_2" />
                    <Separator />
                    <MenuItem Header="_Exit" Click="MenuItem_Click" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About" Click="MenuItem_Click_3" />
                </MenuItem>
            </Menu>

        <TabControl Name="tabControl" />
        </DockPanel>

</Window>
