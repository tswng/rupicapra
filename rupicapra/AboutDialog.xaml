<Window x:Class="chamois.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chamois"
        mc:Ignorable="d"
        Title="AboutDialog" Height="400" Width="600">
    <DockPanel Margin="20" LastChildFill="True">
        <DockPanel.Resources>
            <Style TargetType="Label">
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0,20,0,20"/>
            </Style>
        </DockPanel.Resources>

        <Label DockPanel.Dock="Top" FontSize="48" HorizontalAlignment="Center">Rupicapra</Label>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" MinWidth="80" Click="Button_Click">OK</Button>
        
        <TextBox>https://github.com/tswng/rupicapra</TextBox>
    </DockPanel>
</Window>
